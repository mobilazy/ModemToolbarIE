<Window x:Class="ModemMergerDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModemMergerDesktop"
        mc:Ignorable="d"
        Title="Modem Merger" Height="600" Width="800" MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent" 
        AllowsTransparency="True" 
        WindowStyle="None">
    <Grid Background="Transparent" >
        <!-- Border that applies the rounded corners -->
        <Border Background="White" CornerRadius="20" BorderBrush="Gray" BorderThickness="1" Margin="5">
            <Grid  >
                <!-- Top Bar for Drag and Combination of macOS and Windows-style Buttons -->


                <DockPanel LastChildFill="True" Height="40" Background="Transparent" VerticalAlignment="Top">

                    <Grid x:Name="gridTitleBar" Background="Transparent" MouseLeftButtonDown="Grid_MouseLeftButtonDown" MouseLeftButtonUp="Grid_MouseLeftButtonUp" >
                        <Border Background="Azure" CornerRadius="20" BorderThickness="1" BorderBrush="Gray">
                            <Grid >
                            <!-- Title of the Window -->
                            <TextBlock Text="Rounded Window" FontSize="16" Foreground="#333" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0"/>

                            <!-- Custom macOS + Windows-style buttons on the right side -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                                <!-- Minimize Button (Yellow) with '_' symbol -->
                                <Button Width="30" Height="30" BorderBrush="Transparent" Background="Transparent" Click="MinimizeButton_Click">
                                    <Grid>
                                        <Ellipse Width="20" Height="20" Fill="#FFBD2E" Stroke="Gray" StrokeThickness="0.5"/>
                                        <TextBlock Text="_" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Grid>
                                </Button>
                                <!-- Maximize Button (Green) with '☐' symbol -->
                                <Button Width="30" Height="30" BorderBrush="Transparent" Background="Transparent" Click="MaximizeButton_Click">
                                    <Grid>
                                        <Ellipse Width="20" Height="20" Fill="#27C93F" Stroke="Gray" StrokeThickness="0.5"/>
                                        <TextBlock Text="☐" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Grid>
                                </Button>
                                <!-- Close Button (Red) with '×' symbol -->
                                <Button Width="30" Height="30" BorderBrush="Transparent" Background="Transparent" Click="CloseButton_Click">
                                    <Grid>
                                        <Ellipse Width="20" Height="20" Fill="#FF5F56" Stroke="Gray" StrokeThickness="0.5"/>
                                        <TextBlock Text="×" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Grid>
                                </Button>
                            </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </DockPanel>


                <!-- Address Bar (Below Title Bar) -->

                <DockPanel  LastChildFill="True" Height="30" VerticalAlignment="Top" Margin="10,50,10,0" >
                    <!-- Border wrapping the TextBox to apply CornerRadius -->
                    <Border Background="#E8E8E8" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                        <!-- TextBox to act as the Address Bar -->
                        <TextBox Text="https://www.example.com" FontSize="14" Padding="5"  VerticalContentAlignment="Center"
                             Background="Transparent" BorderThickness="0" />
                    </Border>

                    <!-- Button on the Right (Rounded Edges Styled) -->
                    <Button Width="100" Height="35" BorderBrush="Transparent" Margin="10,0,0,0"  HorizontalAlignment="Right" VerticalAlignment="Center" Padding="5" Cursor="Hand">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#56CCF2" Offset="0.0" />
                                <GradientStop Color="#2F80ED" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderBrush="Transparent" Padding="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <!-- Button Content -->
                        <TextBlock Text="Change" FontSize="14" FontWeight="Bold" Foreground="White" />
                    </Button>
                </DockPanel>


            </Grid>
        </Border>
    </Grid>
</Window>
